# LegalEase India Backend Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Gemini API Configuration (REQUIRED)
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server Port (default: 3001)
PORT=3001

# Environment (development, production, staging)
NODE_ENV=development

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Frontend URL for CORS (comma-separated for multiple origins)
FRONTEND_URL=http://localhost:5173,http://localhost:3000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Rate limiting (requests per 15 minutes per IP)
RATE_LIMIT_MAX=100

# File upload limits
MAX_FILE_SIZE=10485760

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Trust proxy (set to true if behind reverse proxy)
TRUST_PROXY=false

# Session secret (for future use)
SESSION_SECRET=your_session_secret_here
